# command character
escape ^Zz

# the following two lines give a two-line status, with the current window highlighted
hardstatus alwayslastline
hardstatus string '%{= 255;4}[%H%? %1`%?]  %-w%{+b 255;1} %n*%t%?(%u)%? %{-}%+w %=[%d %M %c]'

# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

# 256 colors
attrcolor b ".I"
defbce on

# scrolling
termcapinfo xterm*|rxvt*|kterm*|Eterm* ti@:te@

# mouse
defmoustrack on

# disable screenlock
bind x
bind ^x

# https://www.greasyguide.com/linux/how-do-i-close-a-screen-session/
autodetach on
