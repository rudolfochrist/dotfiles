# command character
escape ^Zz

# the following two lines give a two-line status, with the current window highlighted
hardstatus alwayslastline
hardstatus string '%{= bW}[%H%? %1`%?]  %-w%{+b rW} %n*%t%?(%u)%? %{-}%+w %=[%d %M %c]'

# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

# 256 colors
attrcolor b ".I"
defbce on

# scrolling
termcapinfo xterm*|rxvt*|kterm*|Eterm* ti@:te@

# mouse
defmoustrack on
